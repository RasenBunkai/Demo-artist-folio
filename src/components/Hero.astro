---
// import { ArrowDown, Palette, Star } from "lucide-react"
import Palette from "./svg/Palette.astro";
import Arrow from "./svg/Arrow.astro";
import Star from "./svg/Star.astro";
import ThemeToggle from "./ThemeToggle.astro";
import Image from "astro/components/Image.astro";
---

<section
  class="relative min-h-screen flex items-center justify-center px-4 py-20 bg-transparent">
  <div class="absolute top-6 right-6 z-10">
    <ThemeToggle />
  </div>
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-1/4 left-1/4 w-64 h-64 bg-purple-300/70 rounded-full blur-3xl animate-pulse">
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-pink-300/70 rounded-full blur-3xl animate-pulse delay-1000">
    </div>
  </div>
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="text-center lg:text-left space-y-8">
        <div class="space-y-4">
          <div
            class="flex items-center justify-center lg:justify-start gap-2 text-purple-600 dark:text-purple-400">
            <Palette class="w-5 h-5" />
            <span class="text-sm font-medium tracking-wide uppercase"
              >Artista Digital</span
            >
          </div>
          <h1
            class="text-4xl md:text-6xl lg:text-7xl font-bold bg-gradient-to-r from-purple-600 via-pink-600 to-indigo-600 bg-clip-text text-transparent leading-tight">
            Luna Artística
          </h1>
          <p
            class="text-xl md:text-2xl text-gray-600 max-w-2xl dark:text-white">
            Creando mundos digitales únicos donde la imaginación cobra vida.
            <span class="block mt-2 text-lg italic">
              "Cada trazo cuenta una historia, cada color despierta emociones"
            </span>
          </p>
        </div>
        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            class="group bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-8 py-3 rounded-full font-medium"
            href="#portfolio">
            Ver Portafolio
            <Arrow
              className="group-hover:rotate-45 inline-block ml-2 size-4 transform transition-transform duration-200"
            />
          </a>
          <a
            href="#contact"
            class="group text-purple-900 border-2 border-purple-300 hover:bg-purple-50 dark:border-purple-600 dark:hover:bg-purple-900/20 dark:text-white px-8 py-3 rounded-full items-center flex font-medium">
            Pedir Comisión
            <Star
              className="group-hover:rotate-45 inline-block ml-2 size-4 transform transition-transform duration-200"
            />
          </a>
        </div>
        <div class="flex justify-center lg:justify-center gap-8 pt-8">
          <div class="text-center">
            <div
              class="text-2xl font-bold text-purple-600 dark:text-purple-400">
              500+
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">
              Obras Creadas
            </div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-pink-600 dark:text-pink-400">
              200+
            </div>
            <div class="text-sm text-gray-600 dark:text-gray-400">
              Clientes Felices
            </div>
          </div>
        </div>
      </div>
      <div class="relative">
        <div class="relative w-full max-w-lg mx-auto">
          <div
            class="absolute inset-0 bg-gradient-to-r from-purple-400 to-pink-400 rounded-3xl blur-2xl opacity-30 animate-pulse">
          </div>
          <Image
            src="/placeholder.svg?height=600&width=500"
            alt="Artwork showcase"
            width={500}
            height={600}
            draggable="false"
            class="relative z-10 w-full max-h-[700px] rounded-3xl shadow-2xl overflow-hidden object-cover"
            loading="eager"
          />
        </div>
      </div>
    </div>
  </div>
</section>
