---
import Chat from "./svg/Chat.astro";
---

<div
  class="bg-white/70 dark:bg-gray-800/70 backdrop-blur-sm border border-purple-200 dark:border-purple-700 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow duration-300">
  <div class="p-6 border-b border-purple-100 dark:border-purple-900">
    <h3
      class="text-2xl font-bold text-gray-800 dark:text-gray-200 flex items-center gap-3">
      <Chat class="w-6 h-6 text-purple-600 dark:text-purple-400" />
      Formulario de Contacto
    </h3>
  </div>
  <div class="p-6">
    <form class="space-y-6" name="contact" method="POST" data-netlify="true">
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label
            for="name"
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Nombre *
          </label>
          <input
            id="name"
            name="name"
            type="text"
            required
            class="w-full px-4 py-2 border border-purple-200 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:focus:ring-purple-500 dark:focus:border-purple-500 bg-white dark:bg-slate-900 transition-all duration-200 dark:text-white"
            placeholder="Tu nombre completo"
          />
        </div>

        <div>
          <label
            for="email"
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Email *
          </label>
          <input
            id="email"
            name="email"
            type="email"
            required
            class="w-full px-4 py-2 border border-purple-200 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:focus:ring-purple-500 dark:focus:border-purple-500 bg-white dark:bg-slate-900 transition-all duration-200 dark:text-white"
            placeholder="tu@email.com"
          />
        </div>
      </div>
      <div class="grid md:grid-cols-2 gap-6">
        <div>
          <label
            for="commission"
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Tipo de Comisión *
          </label>
          <select
            id="commission"
            name="commission"
            required
            class="w-full px-4 py-2 border border-purple-200 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:focus:ring-purple-500 dark:focus:border-purple-500 bg-white dark:bg-slate-900 appearance-none transition-all duration-200 dark:text-white/60">
            <option value="" disabled selected>Selecciona una opción</option>
            <option value="Busto">Busto ($50)</option>
            <option value="Medio Cuerpo">Medio Cuerpo ($85)</option>
            <option value="Cuerpo Completo">Cuerpo Completo ($120)</option>
            <option value="Otro">Otro</option>
          </select>
        </div>
        <div>
          <label
            for="budget"
            class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Presupuesto
          </label>
          <input
            id="budget"
            name="budget"
            type="text"
            class="w-full px-4 py-2 border border-purple-200 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:focus:ring-purple-500 dark:focus:border-purple-500 bg-white dark:bg-slate-900 dark:text-white transition-all duration-200"
            placeholder="Ej: $50-100"
          />
        </div>
      </div>
      <div>
        <label
          for="deadline"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Fecha Límite Deseada
        </label>
        <input
          id="deadline"
          name="deadline"
          type="date"
          class="w-full px-4 py-2 border border-purple-200 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:focus:ring-purple-500 dark:focus:border-purple-500 bg-white dark:bg-slate-900 dark:text-white/60 transition-all duration-200"
          style="color-scheme: light dark;"
        />
      </div>
      <div>
        <label
          for="description"
          class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
          Descripción del Proyecto *
        </label>
        <textarea
          id="description"
          name="description"
          required
          rows={5}
          class="w-full px-4 py-2 border border-purple-200 dark:border-purple-700 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:focus:ring-purple-500 dark:focus:border-purple-500 bg-white dark:bg-slate-900 dark:text-white transition-all duration-200"
          placeholder="Describe tu idea, incluye referencias, estilo deseado, colores, etc. Mientras más detalles, mejor será el resultado."
        ></textarea>
      </div>
      <button
        type="submit"
        class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white py-3 px-6 rounded-full font-medium transition-all duration-300 hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 dark:focus:ring-offset-gray-800">
        Enviar Solicitud
      </button>
    </form>
  </div>
</div>

<style>
  select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23946fbe' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.75rem center;
    background-repeat: no-repeat;
    background-size: 1.5em 1.5em;
    padding-right: 2.5rem;
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }

  .dark select {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23a855f7' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
  }
</style>
