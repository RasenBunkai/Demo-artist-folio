<section id="portfolio" class="py-20 px-4 bg-transparent">
  <div class="container mx-auto max-w-7xl">
    <div class="text-center mb-16">
      <h2
        class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent mb-4">
        Mi Portafolio
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Una selección de mis trabajos más recientes y representativos
      </p>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {
        artworks.map((artwork) => (
          <Card
            artwork={artwork}
            key={artwork.id}
            class="transition-transform duration-300 hover:scale-105 hover:shadow-lg"
          />
        ))
      }
    </div>

    <div class="text-center mt-12">
      <a
        href="/"
        target="_blank"
        class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white px-8 py-3 rounded-full font-medium transition-all duration-300 hover:shadow-lg">
        Ver más trabajos
      </a>
    </div>
  </div>
</section>
